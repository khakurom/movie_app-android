<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:paddingStart="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_background_black"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/new_font"
            android:textStyle="bold"
            android:text="Verify OTP"
            android:padding="10dp"
            android:background="@drawable/custom_top_dialog_edit"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/ed_otp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="Type OTP"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:inputType="text"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/text"
            android:paddingStart="30dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/tv_send_otp_again"
                android:textColor="@color/blue"
                android:layout_toStartOf="@+id/tv_show_second"
                android:text="Send OTP again after "
                android:layout_gravity="right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/tv_show_second"

                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:id="@+id/bt_cancel_otp"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:background="@drawable/custom_button_edit_dialog"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bt_verify_otp"
                android:layout_margin="15dp"
                android:text="Verify"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>