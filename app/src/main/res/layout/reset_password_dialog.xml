<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_background_black"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/new_font"
            android:text="Reset Password"
            android:padding="10dp"
            android:background="@drawable/custom_top_dialog_edit"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_show_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Check email now"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/new_font"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/new_font"
            android:id="@+id/bt_cancel"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:background="@drawable/custom_button_edit_dialog"/>

    </LinearLayout>


</LinearLayout>